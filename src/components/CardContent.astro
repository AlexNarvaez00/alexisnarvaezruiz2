---
import Title from "./Title.astro";

interface Props{ 
  title?:string;
  body?:string;
  level:string;
}
const { title, body, level } = Astro.props;
---
<>
  {title ? <Title level={level} class="" >{title}</Title> : null  }
  <slot/>
  {body ? <p class="text-lg md:text-base text-gray-800">{body}</p> : null }
<>
